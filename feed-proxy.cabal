license:             BSD-3-Clause
license-file:        LICENSE
author:              Mats Rauhala
maintainer:          mats.rauhala@iki.fi
-- copyright:
category:            Web
extra-source-files:  CHANGELOG.md

common common-stanza
  build-depends:       base ^>=4.13.0.0 || ^>=4.14 || ^>=4.15 || ^>=4.16
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                       DerivingVia
                       DerivingStrategies
                       DeriveFunctor
                       DeriveGeneric
                       StandaloneDeriving
                       TypeApplications
                       ScopedTypeVariables

library
  import:              common-stanza
  exposed-modules:     MyLib
                       Data.Feed.Render
                       Network.URI.Lens.Extra
                       Text.Feed.Types.Lens
                       Network.HTTP.HasManager
                       Cache
                       Control.Monad.FeedProxy
                       Data.Environment
                       Control.Monad.Logger
                       Data.Trace
                       Servant.Metrics.Prometheus
                       FeedProxy
                       Database
                       FeedProxy.Feed
  build-depends:       xml-conduit
                     , html-conduit
                     , generic-lens
                     , filepath
                     , http-conduit
                     , conduit
                     , directory
                     , xml-lens
                     , lens
                     , mtl
                     , transformers
                     , feed
                     , time
                     , text
                     , xml-types
                     , network-uri
                     , containers
                     , bytestring
                     , servant
                     , servant-server
                     , warp
                     , wai
                     , http-media
                     , exceptions
                     , aeson
                     , lens-aeson
                     , unliftio
                     , katip
                     , unordered-containers
                     , annotated-exception
                     , stm
                     , ekg-core
                     , wai-middleware-metrics
                     , kan-extensions
                     , free
                     , sqlite-simple
                     , http-client-tls
  hs-source-dirs:      src
  ghc-options:       -Wall

executable feed-proxy
  import:              common-stanza
  main-is:             Main.hs
  build-depends:       feed-proxy
                     , optparse-generic
                     , http-client-tls
                     , katip
                     , sqlite-simple
                     , filepath
                     , directory
  hs-source-dirs:      app
  ghc-options:       -threaded -with-rtsopts=-T

test-suite feed-proxy-test
  import:              common-stanza
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MyLibTest.hs
  build-depends:       hspec
                     , QuickCheck
                     , feed-proxy
